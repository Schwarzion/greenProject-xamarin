<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="GreenProjectMobile.Views.NavbarPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Menu">
    <ContentPage.Content>
        <StackLayout Margin="10" BackgroundColor="White">
            <Label
                FontSize="Title"
                HorizontalTextAlignment="Center"
                Text="GreenUp" TextColor="{StaticResource Cblue}"/>
            <Button x:Name="btnMain" TextColor="{StaticResource Cblue}" Text="Main" BackgroundColor="White"/>
            <Button x:Name="btnRegister" TextColor="{StaticResource Cblue}" Text="Register" BackgroundColor="White"/>
            <Button x:Name="btnProfile" TextColor="{StaticResource Cblue}" Text="Profile" BackgroundColor="White"/>
            <Button x:Name="btnQuests" TextColor="{StaticResource Cblue}" Text="Quests" BackgroundColor="White"/>
            <Button x:Name="btnTips" TextColor="{StaticResource Cblue}" Text="Tips" BackgroundColor="White"/>
            <Button x:Name="btnAbout" TextColor="{StaticResource Cblue}" Text="About the application" BackgroundColor="White"/>
            <Button x:Name="btnLogout" TextColor="{StaticResource Cblue}" Text="Logout" BackgroundColor="White"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>